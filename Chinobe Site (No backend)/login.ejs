<div class="signupFrm">
    <form action="" class="form" id="form">
        <a href="/">Go back to landing</a> <br> <br>
      <h1 class="title">Login</h1> 


      <div class="inputContainer">
        <input type="text" class="input" id="username" placeholder="a">
        <label for="" name="username" class="username" class="label">Username</label>
      </div>

      <div class="inputContainer">
        <input type="password" id="password" class="input" placeholder="a">
        <label for="" name="password" class="label">Password</label>
      </div>

      Don't have a Chinobe account yet?
      <a href="https://chinob.xyz/register">Register</a> <br> <br>
 
      <input type="submit" class="submitBtn" value="Login">
      <div id="signupAlert"></div>
    </form>
  </div>
  <script>
    const alertPlaceholder = document.getElementById('signupAlert')
const appendAlert = (message, type) => {
const wrapper = alertPlaceholder
wrapper.innerHTML = [
`<div class="alert alert-${type} alert-dismissible" id="signupAlert" role="alert">`,
`   <div>${message}</div>`,
'   <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>',
'</div>'
].join('')
}
    const form = document.getElementById("form")
    $('#form').submit(function (e) {
        e.preventDefault()
        var formData = {
            username: document.getElementById("username").value,
            password: document.getElementById("password").value
        };
        appendAlert("logging in...", "success")
        $.ajax({
            type: 'POST',
            url: '/api/v1/users/login',
            data: JSON.stringify(formData),
            contentType: 'application/json',
            success: function(response) {
                appendAlert("Successfully logged in! Redirecting...", "success")
                window.location.href = "/home"
            },
            error: function(xhr, status, error) {
                var responseData = xhr.responseText;
                appendAlert(`Could not log in! Error: ${responseData}`, "danger")
            }
        });
    })
</script>